{
  "name": "@paths-design/component-discovery",
  "version": "0.1.0",
  "type": "module",
  "description": "Advanced component discovery and auto-linting for Designer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "analyze": "node dist/analyze.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.6.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@paths-design/canvas-schema": "file:../canvas-schema",
    "@paths-design/component-indexer": "file:../component-indexer",
    "@paths-design/augment": "file:../augment",
    "glob": "^10.3.10",
    "ts-morph": "^21.0.1"
  },
  "files": [
    "dist",
    "analyzers",
    "templates"
  ],
  "keywords": [
    "designer",
    "component-discovery",
    "auto-linting",
    "analysis",
    "canvas"
  ]
}
