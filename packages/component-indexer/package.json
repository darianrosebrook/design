{
  "name": "@paths-design/component-indexer",
  "version": "0.1.0",
  "type": "module",
  "description": "Component discovery and indexing for Designer",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "designer-index": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "components:index": "node dist/cli.js",
    "components:watch": "node dist/cli.js --watch"
  },
  "dependencies": {
    "typescript": "^5.3.3",
    "zod": "^3.23.8",
    "ulidx": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

