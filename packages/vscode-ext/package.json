{
  "name": "@paths-design/vscode-ext",
  "version": "0.1.0",
  "type": "module",
  "description": "VS Code extension for Designer - local-first design tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && node esbuild.config.js",
    "build:webview": "node esbuild.config.js",
    "watch": "tsc --watch",
    "watch:webview": "node esbuild.config.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@paths-design/canvas-schema": "workspace:*",
    "@paths-design/canvas-engine": "workspace:*",
    "@paths-design/canvas-renderer-dom": "workspace:*",
    "@paths-design/component-indexer": "workspace:*",
    "@paths-design/properties-panel": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.84.0",
    "@vitest/coverage-v8": "^1.0.4",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "designer",
          "title": "Designer",
          "icon": "$(paintcan)"
        }
      ]
    },
    "views": {
      "designer": [
        {
          "type": "webview",
          "id": "designer.propertiesPanel",
          "name": "Properties",
          "when": "workspaceHasCanvasFiles"
        }
      ]
    },
    "commands": [
      {
        "command": "designer.openCanvas",
        "title": "Open in Canvas Designer",
        "icon": "$(paintcan)"
      },
      {
        "command": "designer.openPropertiesPanel",
        "title": "Open Properties Panel"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "designer.openCanvas",
          "when": "resourceExtname == .json && resourceFilename =~ /\\.canvas\\.json$/",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "designer.openCanvas",
          "when": "resourceExtname == .json && resourceFilename =~ /\\.canvas\\.json$/",
          "group": "navigation"
        }
      ]
    }
  }
}

