{
  "name": "@paths-design/augment",
  "version": "0.1.0",
  "type": "module",
  "description": "Systematic design document augmentation for testing and validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
